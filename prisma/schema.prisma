generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Game {
  id      String      @id @default(uuid()) @db.VarChar(36)
  players Player[]
  size    Int
  states  GameState[]
}

model GameState {
  createdAt    DateTime      @default(now())
  turn         Int
  game         Game          @relation(fields: [gameId], references: [id])
  gameId       String        @db.VarChar(36)
  cellStates   CellState[]
  playerStates PlayerState[]

  @@id([gameId, turn])
}

model CellState {
  index           Int
  gameState       GameState @relation(fields: [gameStateGameId, gameStateTurn], references: [gameId, turn])
  gameStateGameId String    @db.VarChar(36)
  gameStateTurn   Int
  alive           Boolean
  player          Player?   @relation(fields: [playerGameId, playerUserId], references: [gameId, userId])
  playerGameId    String?   @db.VarChar(36)
  playerUserId    String?   @db.VarChar(36)

  @@id([index, gameStateGameId, gameStateTurn])
}

model PlayerState {
  player          Player    @relation(fields: [playerGameId, playerUserId], references: [gameId, userId])
  playerGameId    String    @db.VarChar(36)
  playerUserId    String    @db.VarChar(36)
  gameState       GameState @relation(fields: [gameStateGameId, gameStateTurn], references: [gameId, turn])
  gameStateGameId String    @db.VarChar(36)
  gameStateTurn   Int
  moves           Int

  @@id([playerUserId, gameStateGameId, gameStateTurn])
}

model Player {
  game        Game          @relation(fields: [gameId], references: [id])
  gameId      String        @db.VarChar(36)
  user        User          @relation(fields: [userId], references: [id])
  userId      String        @db.VarChar(36)
  color       String
  PlayerState PlayerState[]
  CellState   CellState[]

  ready         Boolean @default(false)
  queuedToggles Int[]

  @@id([gameId, userId])
}

model User {
  id     String   @id @default(uuid()) @db.VarChar(36)
  Player Player[]
}
