generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Game {
  id      String      @id @default(uuid()) @db.Uuid
  players Player[]
  size    Int
  states  GameState[]
}

model GameState {
  createdAt    DateTime    @default(now())
  turn         Int
  game         Game        @relation(fields: [gameId], references: [id])
  gameId       String      @db.Uuid
  cellStates   CellState[]
  playerStates Player      @relation(fields: [playerGameId, playerUserId], references: [gameId, userId])

  playerGameId String        @db.Uuid
  playerUserId String        @db.Uuid
  PlayerState  PlayerState[]
  @@id([gameId, turn])
}

model CellState {
  index           Int
  gameState       GameState @relation(fields: [gameStateGameId, gameStateTurn], references: [gameId, turn])
  gameStateGameId String    @db.Uuid
  gameStateTurn   Int
  alive           Boolean
  user            User?     @relation(fields: [userId], references: [id])
  userId          String?   @db.Uuid

  @@id([index, gameStateGameId, gameStateTurn])
}

model PlayerState {
  player          Player    @relation(fields: [playerGameId, playerUserId], references: [gameId, userId])
  playerGameId    String    @db.Uuid
  playerUserId    String    @db.Uuid
  gameState       GameState @relation(fields: [gameStateGameId, gameStateTurn], references: [gameId, turn])
  gameStateGameId String    @db.Uuid
  gameStateTurn   Int
  moves           Int

  @@id([playerUserId, gameStateGameId, gameStateTurn])
}

model Player {
  game        Game          @relation(fields: [gameId], references: [id])
  gameId      String        @db.Uuid
  user        User          @relation(fields: [userId], references: [id])
  userId      String        @db.Uuid
  color       String
  GameState   GameState[]
  PlayerState PlayerState[]

  ready         Boolean @default(false)
  queuedToggles Int[]

  @@id([gameId, userId])
}

model User {
  id        String      @id @default(uuid()) @db.Uuid
  Player    Player[]
  CellState CellState[]
}
